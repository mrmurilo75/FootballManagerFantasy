<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stadium"
    tools:context=".activities.StartActivity">

    <Button
        android:id="@+id/button_nextGame_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_market_main"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/button_market_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <Button
        android:id="@+id/button_market_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market"
        app:layout_constraintBottom_toTopOf="@+id/button_4_main"
        app:layout_constraintEnd_toEndOf="@+id/button_tactics_main"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/button_tactics_main"
        app:layout_constraintTop_toBottomOf="@+id/button_nextGame_main"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/button_tactics_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tactics"
        app:layout_constraintBottom_toTopOf="@+id/button_4_main"
        app:layout_constraintEnd_toEndOf="@+id/button_4_main"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/button_4_main"
        app:layout_constraintTop_toBottomOf="@+id/button_nextGame_main"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/button_4_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <Button
        android:id="@+id/button_inbox_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inbox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_tactics_main"
        app:layout_constraintStart_toEndOf="@+id/recycler_positions_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <ImageView
        android:id="@+id/image_team01_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/image_team02_main"
        app:layout_constraintEnd_toEndOf="@+id/recycler_positions_main"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_team02_main"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/image_team02_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/recycler_positions_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/recycler_positions_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name_team01_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Team 01"
        app:layout_constraintBottom_toTopOf="@+id/recycler_positions_main"
        app:layout_constraintEnd_toEndOf="@+id/image_team01_main"
        app:layout_constraintStart_toStartOf="@+id/image_team01_main"
        app:layout_constraintTop_toBottomOf="@+id/image_team01_main"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/name_team02_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team 02"
        app:layout_constraintBaseline_toBaselineOf="@+id/name_team01_main"
        app:layout_constraintEnd_toEndOf="@+id/image_team02_main"
        app:layout_constraintStart_toStartOf="@+id/image_team02_main" />

    <TextView
        android:id="@+id/text_vs_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VS."
        app:layout_constraintBottom_toBottomOf="@+id/image_team01_main"
        app:layout_constraintEnd_toStartOf="@+id/image_team02_main"
        app:layout_constraintStart_toEndOf="@+id/image_team01_main"
        app:layout_constraintTop_toTopOf="@+id/image_team02_main" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_positions_main"
        android:layout_width="312dp"
        android:layout_height="162dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>